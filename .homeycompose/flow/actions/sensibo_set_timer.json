{
  "id": "sensibo_set_timer",
  "title": {
    "en": "Set timer"
  },
  "titleFormatted": {
    "en": "Set timer [[minutesFromNow]], [[on]], [[mode]], [[fanLevel]], [[targetTemperature]]"
  },
  "hint": {
    "en": "Set minutes from now and select one or more parameters to be changed when the timer fires."
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=Sensibo"
    },
    {
      "name": "minutesFromNow",
