      "min": 1,
      "max": 1440,
      "step": 1,
      "placeholder": {
        "en": "Minutes from now"
      }
    },
    {
      "name": "on",
      "title": {
        "en": "On / off"
      },
      "type": "dropdown",
      "values": [
        {
          "id": "nop",
          "label": {
            "en": "- Unchanged -"
          }
