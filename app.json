{
  "id": "com.sensibo",
  "version": "1.3.1",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "brandColor": "#1BB7E9",
  "name": {
    "en": "Sensibo"
  },
  "description": {
    "en": "Make your air conditioner smart"
  },
  "category": [
    "climate"
  ],
  "tags": {
    "en": [
      "sensibo",
      "temperature control",
      "heating",
      "humidity",
      "hvac"
    ]
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "permissions": [],
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "bjornaralmli"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/balmli/com.sensibo/issues"
  },
  "homeyCommunityTopicId": 28990,
  "source": "https://github.com/balmli/com.sensibo",
  "flow": {
    "triggers": [
      {
        "id": "se_offline",
        "title": {
          "en": "Sensibo offline"
        },
        "tokens": [
          {
            "name": "seconds_ago",
            "type": "number",
            "title": {
              "en": "Last seen seconds"
            },
            "example": 300
          },
          {
            "name": "last_seen",
            "type": "string",
            "title": {
              "en": "Last seen"
            },
            "example": "10:01:02"
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Sensibo"
          }
        ]
      },
      {
        "id": "se_onoff_false",
        "title": {
          "en": "Sensibo turned off"
        },
        "tokens": [
          {
            "name": "state",
            "type": "number",
            "title": {
              "en": "State"
            },
            "example": 0
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Sensibo"
          }
        ]
      },
      {
        "id": "se_onoff_true",
        "title": {
          "en": "Sensibo turned on"
        },
        "tokens": [
          {
            "name": "state",
            "type": "number",
            "title": {
              "en": "State"
            },
            "example": 1
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Sensibo"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "se_climate_react_enabled",
        "title": {
          "en": "Climate React is !{{enabled|disabled}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Sensibo"
          }
        ]
      },
      {
        "id": "se_onoff_is_on",
        "title": {
          "en": "Sensibo is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Sensibo"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "sensibo_cr",
        "title": {
          "en": "Control Climate React"
        },
        "hint": {
          "en": "Enable or disable Climate React"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Sensibo"
          },
          {
            "name": "enabled",
            "title": {
              "en": "Enabled"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "off",
                "label": {
                  "en": "Off"
                }
              },
              {
                "id": "on",
                "label": {
                  "en": "On"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "sensibo_fandirection",
        "title": {
          "en": "Set swing"
        },
        "hint": {
          "en": "Set the fan direction"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Sensibo"
          },
          {
            "name": "fanDirection",
            "title": {
              "en": "Swing"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "stopped",
                "label": {
                  "en": "Stopped"
                }
              },
              {
                "id": "fixedBottom",
                "label": {
                  "en": "Fixed bottom"
                }
              },
              {
                "id": "fixedMiddleBottom",
                "label": {
                  "en": "Fixed middle bottom"
                }
              },
              {
                "id": "fixedMiddle",
                "label": {
                  "en": "Fixed middle"
                }
              },
              {
                "id": "fixedMiddleTop",
                "label": {
                  "en": "Fixed middle top"
                }
              },
              {
                "id": "fixedTop",
                "label": {
                  "en": "Fixed top"
                }
              },
              {
                "id": "rangeBottom",
                "label": {
                  "en": "Range bottom"
                }
              },
              {
                "id": "rangeMiddle",
                "label": {
                  "en": "Range middle"
                }
              },
              {
                "id": "rangeTop",
                "label": {
                  "en": "Range top"
                }
              },
              {
                "id": "rangeFull",
                "label": {
                  "en": "Range full"
                }
              },
              {
                "id": "horizontal",
                "label": {
                  "en": "Horizontal"
                }
              },
              {
                "id": "both",
                "label": {
                  "en": "Both"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "sensibo_fanlevel",
        "title": {
          "en": "Set the fan level"
        },
        "hint": {
          "en": "Set the fan level (auto, high, medium or low)"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Sensibo"
          },
          {
            "name": "fanLevel",
            "title": {
              "en": "Fan level"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "auto",
                "label": {
                  "en": "Auto"
                }
              },
              {
                "id": "high",
                "label": {
                  "en": "High"
                }
              },
              {
                "id": "medium",
                "label": {
                  "en": "Medium"
                }
              },
              {
                "id": "low",
                "label": {
                  "en": "Low"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "sensibo_mode",
        "title": {
          "en": "Set the fan mode"
        },
        "hint": {
          "en": "Set the mode (heat, cool, fan, auto or dry)"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Sensibo"
          },
          {
            "name": "mode",
            "title": {
              "en": "Mode"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "cool",
                "label": {
                  "en": "Cool"
                }
              },
              {
                "id": "heat",
                "label": {
                  "en": "Heat"
                }
              },
              {
                "id": "fan",
                "label": {
                  "en": "Fan"
                }
              },
              {
                "id": "auto",
                "label": {
                  "en": "Auto"
                }
              },
              {
                "id": "dry",
                "label": {
                  "en": "Dry"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "sensibo_off",
        "title": {
          "en": "Turn off"
        },
        "hint": {
          "en": "Turn of"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Sensibo"
          }
        ]
      },
      {
        "id": "sensibo_on",
        "title": {
          "en": "Turn on"
        },
        "hint": {
          "en": "Turn on"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Sensibo"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "Sensibo",
      "name": {
        "en": "Sensibo"
      },
      "icon": "/drivers/Sensibo/assets/icon.svg",
      "images": {
        "large": "/drivers/Sensibo/assets/images/large.png",
        "small": "/drivers/Sensibo/assets/images/small.png"
      },
      "class": "thermostat",
      "capabilities": [
        "se_onoff",
        "target_temperature",
        "thermostat_mode",
        "se_fanlevel",
        "se_fandirection",
        "measure_temperature",
        "measure_humidity",
        "se_last_seen"
      ],
      "capabilitiesOptions": {
        "se_onoff": {
          "greyout": true
        },
        "target_temperature": {
          "decimals": 0,
          "min": 16,
          "max": 30,
          "step": 1
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "Polling_Interval",
          "type": "number",
          "label": {
            "en": "Polling interval"
          },
          "value": 60,
          "min": 15,
          "max": 300,
          "hint": {
            "en": "Polling interval (seconds)"
          }
        },
        {
          "id": "Delay_Offline",
          "type": "number",
          "label": {
            "en": "Delay for offline"
          },
          "value": 300,
          "min": 120,
          "max": 3600,
          "hint": {
            "en": "Delay when checking if the Sensibo is offline (seconds)"
          }
        }
      ]
    }
  ],
